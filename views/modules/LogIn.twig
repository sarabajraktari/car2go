<div class="min-h-screen flex items-center justify-center bg-gray-100">
    <div
        class="relative mx-auto w-[90%] max-w-[400px] h-[400px] bg-white px-6 pt-10 pb-8 shadow-xl ring-1 ring-gray-900/5 sm:rounded-xl sm:px-10 m-5">
        <div class="w-full">
            {% if data.is_logged_in %}
                <div class="text-center m-3">
                    <h1 class="text-3xl font-semibold text-gray-900 mt-6">Welcome Back!</h1>
                    <p class="mt-2 text-gray-500">You are already logged in.</p>
                </div>

                <div class="my-6 mb-3">
                    <a href="{{ data.logout_url }}" class="w-full block text-center rounded-md bg-red-500 px-3 py-4 text-black focus:bg-red-700 focus:outline-none">
                        Logout
                    </a>
                </div>

            {% else %}
                <div class="text-center m-3">
                    <h1 class="text-3xl font-semibold text-gray-900 mt-6">Log in</h1>
                    <p class="mt-2 text-gray-500">Sign in below to access your account</p>
                </div>

                <div class="mt-5 m-3">
                    {% if data.error %}
                        <p style="color:red;">{{ data.error }}</p>
                    {% endif %}

                    <form action="" method="POST">
                        <input type="hidden" name="login_form" value="1">

                        <div class="relative mt-6 m-3 border-b border-gray-300">
                            <label for="username" class=""></label>
                            <input type="text" name="username" id="username" placeholder="Username" required
                                class="w-full bg-transparent py-2 px-3 text-gray-800 placeholder-gray-500 
                                focus:outline-none focus:border-blue-500 transition-colors duration-300" />
                        </div>

                        <div class="relative mt-6 mb-8 border-b border-gray-300">
                            <label for="password" class=""></label>
                            <input type="password" name="password" id="password" placeholder="Password" required
                                class="w-full bg-transparent py-2 px-3 text-gray-800 placeholder-gray-500 
                                focus:outline-none focus:border-blue-500 transition-colors duration-300" />
                        </div>

                        <div class="my-6 mb-3">
                            <button type="submit"
                                class="w-full rounded-md bg-black px-3 py-4 text-white focus:bg-gray-600 focus:outline-none">
                                Log in
                            </button>
                        </div>

                        <p class="text-center text-sm text-gray-500 mb-3">Don't have an account yet?
                            <a href="http://internship.test/signin/"
                                class="font-semibold text-gray-600 hover:underline focus:text-gray-800 focus:outline-none">
                                Sign up
                            </a>.
                        </p>
                    </form>
                </div>
            {% endif %}
        </div>
    </div>
</div>
