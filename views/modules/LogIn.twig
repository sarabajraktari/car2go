<div class="my-32 flex items-center justify-center bg-gradient-to-r">
    <div class="absolute top-0 left-0 w-full h-full bg-cover bg-center opacity-60"
        style="background-image: url('http://localhost/internship/wp-content/themes/car2go/assets/media/background.jpeg'); background-size: cover; background-repeat: no-repeat;">
    </div>
    <div class="relative w-[90%] max-w-[400px] bg-gray-100 rounded-xl overflow-hidden shadow-lg" id="signin">
        <div class="relative p-8">
            {% if data.is_logged_in %}
                <div class="text-center mb-6">
                    <h1 class="text-4xl font-bold text-gray-800" id="text1">Welcome Back!</h1>
                    <p class="text-lg text-gray-600 mt-2" id="text1">You are already logged in.</p>
                </div>

                <div>
                    <a href="{{ data.logout_url }}" class="block w-full bg-red-500 text-white text-center py-3 rounded-md hover:bg-red-600 transition duration-200">
                        Logout
                    </a>
                </div>

            {% else %}
                <div class="text-center mb-8">
                    <h1 class="text-4xl font-bold text-gray-800" id="text1">Log in</h1>
                    <p class="text-lg text-gray-600 mt-2" id="text1">Sign in below to access your account</p>
                </div>

                <div>

                    <form action="" method="POST">
                        <input type="hidden" name="login_form" value="1">

                        <div class="mb-4">
                            <label for="username" class="sr-only">Username</label>
                            <input type="text" name="username" id="username" placeholder="Username" required
                                class="w-full px-4 py-3 rounded-md bg-gray-100 border border-gray-300 text-gray-800 placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-blue-400 transition duration-200" />
                        </div>

                        <div class="mb-6">
                            <label for="password" class="sr-only">Password</label>
                            <input type="password" name="password" id="password" placeholder="Password" required
                                class="w-full px-4 py-3 rounded-md bg-gray-100 border border-gray-300 text-gray-800 placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-blue-400 transition duration-200" />
                        </div>

                        {% if data.error %}
							<p class="text-red-500 font-semibold mb-8 -mt-2 text-sm sm:text-base">
								{{ data.error }}
							</p>
						{% endif %}

                        <button type="submit"
                            class="w-full bg-black text-white py-3 rounded-md transition duration-200">
                            Log in
                        </button>
                    </form>

                    <p class="text-center text-sm text-gray-500 mt-4" id="text1">
                        Don't have an account yet? 
                        <a href="http://internship.test/register/" class="text-blue-600 hover:underline">Register now</a>.
                    </p>
                </div>
            {% endif %}
        </div>
    </div>
</div>
