<div class="mt-10 mb-8 flex items-center justify-center bg-gradient-to-r ">
    <div class="absolute top-0 left-0 w-full h-full bg-cover bg-center opacity-40"
style="background-image: url('{{ data.background_image }}'); background-size: cover; background-repeat: no-repeat;">
</div>

    <div class="relative w-[90%] max-w-[400px] bg-gray-100 rounded-xl overflow-hidden shadow-lg" id="signin">
        <div class="relative p-8">
            <div class="text-center mb-8">
                <h1 class="text-4xl font-bold text-gray-800" id="text1">Sign Up</h1>
                <p class="text-lg text-gray-600 mt-2" id="text1">Create an account below</p>
            </div>

            <div>
                {% if data.error %}
                    <p class="text-center text-red-500 font-semibold">{{ data.error }}</p>
                {% endif %}

                {% if data.success %}
                    <p class="text-center text-green-500 font-semibold">{{ data.success }}</p>
                {% endif %}

                <form action="" method="POST">
                    <input type="hidden" name="add_user_form" value="1">

                    <div class="mb-4">
                        <label for="first_name" class="sr-only" id="text1">First Name</label>
                        <input type="text" name="first_name" id="first_name" placeholder="First Name" required
                            class="w-full px-4 py-3 rounded-md bg-gray-100 border border-gray-300 text-gray-800 focus:outline-none focus:ring-2 focus:ring-blue-400 transition duration-200" />
                    </div>

                    <div class="mb-4">
                        <label for="last_name" class="sr-only" id="text1">Last Name</label>
                        <input type="text" name="last_name" id="last_name" placeholder="Last Name" required
                            class="w-full px-4 py-3 rounded-md bg-gray-100 border border-gray-300 text-gray-800  focus:outline-none focus:ring-2 focus:ring-blue-400 transition duration-200" />
                    </div>

                    <div class="mb-4">
                        <label for="username" class="sr-only" id="text1">Username</label>
                        <input type="text" name="username" id="username" placeholder="Username" required
                            class="w-full px-4 py-3 rounded-md bg-gray-100 border border-gray-300 text-gray-800 focus:outline-none focus:ring-2 focus:ring-blue-400 transition duration-200" />
                    </div>

                    <div class="mb-4">
                        <label for="email" class="sr-only" id="text1">Email Address</label>
                        <input type="email" name="email" id="email" placeholder="Email Address" required
                            class="w-full px-4 py-3 rounded-md bg-gray-100 border border-gray-300 text-gray-800 focus:outline-none focus:ring-2 focus:ring-blue-400 transition duration-200" />
                    </div>

                    <div class="mb-6">
                        <label for="password" class="sr-only" id="text1">Password</label>
                        <input type="password" name="password" id="password" placeholder="Password" required
                            class="w-full px-4 py-3 rounded-md bg-gray-100 border border-gray-300 text-gray-800 focus:outline-none focus:ring-2 focus:ring-blue-400 transition duration-200" />
                    </div>

                    <button type="submit" id="button"
                        class="w-full bg-black text-white py-3 rounded-md transition duration-200">
                        Sign Up
                    </button>
                </form>

                <p class="text-center text-sm text-gray-500 mt-4" id="text1">
                    Already have an account? 
                    <a href="http://internship.test/log-in/" class="text-blue-600 hover:underline">Log in</a>.
                </p>
            </div>
        </div>
    </div>
</div>
