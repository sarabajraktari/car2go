<section class="py-10 bg-black sm:py-16 lg:py-24 text-white p-4">
    <div class="px-4 mx-auto sm:px-6 lg:px-8 max-w-7xl">
        <div class="max-w-2xl mx-auto text-center">
            <h2 class="text-3xl font-bold leading-tight sm:text-4xl lg:text-5xl pb-6">
                Car2Go Frequently Asked Questions
            </h2>

            <h5 class="text-base leading-tight sm:text-sm lg:text-base">
                Find answers to your questions from our previous answers
            </h5>
        </div>
        <div class="max-w-5xl mx-auto mt-8 space-y-4 md:mt-16">
            {% if data.faq is iterable %}
                {% for i, item in data.faq %}
                <div class="transition-all duration-200 bg-white border border-gray-200 shadow-lg cursor-pointer rounded-sm" x-data="{ open: false }">
                    <button type="button" id="question{{ i+1 }}" class="flex items-center justify-between w-full hover:bg-gray-50 px-4 py-5 sm:p-6" data-state="closed" @click="open = ! open">
                        <span class="flex text-lg font-semibold text-black">{{ item.faq_title }}</span>
                        <svg id="arrow{{ i+1 }}" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor"
                            :class="{ 'transform rotate-180': open }" class="w-6 h-6 text-gray-400 transition-transform duration-300">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                        </svg>
                    </button>
                    <div id="answer{{ i+1 }}" class="px-4 pb-5 sm:px-6 sm:pb-6 text-black overflow-hidden" x-show="open"
                         x-transition:enter.duration.500ms x-transition:leave.duration.400ms style="display: none;">
                        <hr class="border-gray-300">
                        <p class="my-2">{{ item.faq_description|raw }}</p>
                    </div>
                </div>
                {% endfor %}
            {% else %}
                <p>No FAQ items found.</p>
            {% endif %}
        </div>
        <p class="text-center text-slate-100 text-base mt-9">
            Still have questions?
            <span class="cursor-pointer font-medium text-tertiary transition-all duration-200 hover:text-tertiary focus:text-tertiary hover-underline">Contact
                our support
            </span>
        </p>
    </div>
</section>
