<div class="car-rental-banner bg-black text-white w-full max-w-screen-xl mx-auto mb-4 relative">
  {% if data.image %}
    <div class="absolute inset-0 flex justify-end overflow-hidden h-full">
      <img src="{{ data.image }}" alt="Banner Image" class="my-auto h-1/2 md:h-3/4 lg:h-3/4 object-cover animate-slide-in">
    </div>
  {% endif %}
  
  <div class="relative z-10 flex items-center justify-center p-4 mb-4 h-full">
    <div class="w-full space-y-4 text-center">
      <h2 class="text-2xl md:text-4xl lg:text-5xl font-bold mt-4 {% if not data.banner_description %}mb-4{% endif %}">
        {{ wp_title() }}
      </h2>
      {% if data.banner_description %}
        <p class="text-sm md:text-base px-2 font-figtree">{{ data.banner_description }}</p>
      {% endif %}
    </div>
  </div>
</div>