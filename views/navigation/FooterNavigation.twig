<section class="footer border-t border-gray-400"> 
    <div class="max-w-screen-xl mx-auto flex flex-col sm:flex-row sm:flex-wrap sm:items-center py-6 px-4 lg:px-0">
        
        <!-- Logo -->
        <div class="flex justify-center sm:justify-start mb-4 sm:mb-0">
            <img id="footer-theme-logo" src="{{ data.logo.url }}" alt="{{ data.logo.alt | default('Logo') }}" class="h-16 w-full lg:w-[120px] text-white object-contain">
        </div>

        <!-- Links -->
        <div class="flex-grow flex justify-center sm:justify-center mb-4 sm:mb-0">
            <ul class="flex flex-wrap justify-center space-x-4 sm:space-x-6 lg:space-x-8">
                {% for link in data.footer_pages_links %}
                    <li>
                        <a href="{{ link.page_link.url }}" class="text-slate-300">{{ link.page_name | default('Page') }}</a>
                    </li>
                {% endfor %}
            </ul>
        </div>

        <!-- Social Media Icons -->
        <div class="flex justify-center sm:justify-end space-x-4 sm:space-x-5">
            {% for social in data.social_media_links %}
                <a href="{{ social.social_media_icon_link.url }}" class="flex items-center">
                    <div class="relative w-7 h-7 rounded-full flex items-center justify-center">
                        <img src="{{ social.social_media_icon.url }}" class="h-7/2 w-4">
                    </div>
                </a>
            {% endfor %}
        </div>
    </div>
</section>
