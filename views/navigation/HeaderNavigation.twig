<header class="bg-black p-4 sticky top-0 z-50 border-b border-gray-400">
    <div class="container mx-auto max-w-screen-xl flex items-center justify-between">
        <div class="flex-shrink-0">
            {% if data.header_logo %}
                <a href="/" class="flex items-center w-full h-full">
                    <img src="{{ data.header_logo.url }}" alt="{{ data.header_logo.alt | default('Logo') }}" loading="lazy" class="h-8 md:h-16 w-full md:w-[120px] {{ is_front_page() ? '' : 'logo' }}">
                </a>
            {% else %}
                <img src="/path/to/default-logo.png" alt="Default Logo" loading="lazy" class="h-8 md:h-16 w-full md:w-[120px]">
            {% endif %}
        </div>

        <nav class="hidden md:flex ml-auto">
            <ul class="flex space-x-6">
                {% for page in data.header_pages %}
                    <li class="relative group">
                        <a href="{{ page.page_url.url }}" class="text-white hover:text-gray-300 transition duration-200 flex items-center">
                            {{ page.page_name }}
                            {% if page.sub_menu %}
                                <svg class="w-4 h-4 ml-1 text-gray-400 group-hover:text-gray-300 transition duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                                </svg>
                            {% endif %}
                        </a>
                        {% if page.sub_menu %}
                            <ul class="absolute left-0 mb-3 hidden group-hover:block bg-black rounded-lg w-40 transition duration-200">
                                {% for sub_page in page.sub_menu %}
                                    <li>
                                        <a href="{{ sub_page.sub_page_url }}" class="block py-2 px-4 text-white hover:bg-gray-700 transition duration-200 rounded-lg">
                                            {{ sub_page.sub_page_name }}
                                        </a>
                                    </li>
                                {% endfor %}
                            </ul>
                        {% endif %}
                    </li>
                {% endfor %}
            </ul>

            <!-- Login/Logout button here, outside the loop -->
            {% if data.is_logged_in %}
                <!-- Show logout button if the user is logged in -->
                <a href="{{ data.logout_url }}" class="text-white hover:text-gray-300 transition duration-200 ml-4">Logout</a>
            {% else %}
                <!-- Show login button if the user is not logged in -->
                <a href="{{ data.login_url }}" class="text-white hover:text-gray-300 transition duration-200 ml-4">Login</a>
            {% endif %}
        </nav>

        <div class="md:hidden">
            <button id="mobile-menu-button" class="text-white focus:outline-none">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
                </svg>
            </button>
        </div>
    </div>

    <!-- Mobile Menu -->
    <div id="mobile-menu" class="hidden mt-2 rounded-lg shadow-lg h-screen">
        <ul class="flex flex-col items-start">
            {% for page in data.header_pages %}
                <li class="border-b border-gray-700 w-full">
                    <div class="flex items-center justify-between w-full">
                        <a href="{{ page.page_url.url }}" class="block py-4 text-white hover:text-gray-300 transition duration-200 w-full text-left">
                            {{ page.page_name }}
                        </a>
                        {% if page.sub_menu %}
                            <button class="toggle-submenu focus:outline-none text-white">
                                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                                </svg>
                            </button>
                        {% endif %}
                    </div>
                    {% if page.sub_menu %}
                        <ul class="pl-4 rounded-lg mt-2 hidden w-full">
                            {% for sub_page in page.sub_menu %}
                                <li class="border-b border-gray-700 last:border-none w-full">
                                    <a href="{{ sub_page.sub_page_url }}" class="block py-2 text-white hover:bg-gray-700 transition duration-200 w-full text-left">
                                        {{ sub_page.sub_page_name }}
                                    </a>
                                </li>
                            {% endfor %}
                        </ul>
                    {% endif %}
                </li>
            {% endfor %}
        </ul>

        <!-- Login/Logout button in mobile menu -->
        {% if data.is_logged_in %}
            <a href="{{ data.logout_url }}" class="block py-4 text-white hover:bg-gray-300 transition duration-200 w-full text-left">Logout</a>
        {% else %}
            <a href="{{ data.login_url }}" class="block py-4 text-white hover:bg-gray-300 transition duration-200 w-full text-left">Login</a>
        {% endif %}
    </div>
</header>
