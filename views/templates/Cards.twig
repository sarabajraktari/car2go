<div class="cards-container">
    {% if is_cards_page %}
        <div class="cards-grid grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
            {% for card in cards %}
                <div class="card-item bg-white rounded-lg shadow-md overflow-hidden">
                    <img src="{{ card.image }}" alt="{{ card.title }}" class="w-full h-48 object-cover">
                    <div class="p-4">
                        <h2 class="text-xl font-bold">{{ card.title }}</h2>
                        <p class="mt-2 text-gray-600">{{ card.excerpt }}</p>
                        <a href="{{ card.link }}" class="text-blue-500 hover:underline mt-4 block">Read More</a>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% endif %}
</div>
