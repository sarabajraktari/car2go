<div class="search-bar container mx-auto max-w-6xl pb-8 relative">
   <form id="search-form" action="car2go/cars/" method="get" class="flex flex-col items-start bg-white p-6 rounded-lg shadow-lg space-y-4 md:space-y-0 md:space-x-4 md:flex-row md:items-center relative">
      <!-- Search input -->
      <div class="w-full md:w-1/3 relative">
         <input type="text" id="search-input" name="search" placeholder="Search a car..." class="w-full p-4 border border-gray-300 rounded-lg shadow-inner focus:outline-none focus:ring-2 focus:ring-indigo-500" value="{{ search_query }}">
         <ul id="suggestions" class="absolute bg-white shadow-lg z-50 w-full rounded-lg mt-1 hidden">
         </ul>
      </div>

      <!-- Brand select -->
      <div class="w-full md:w-1/3">
         <select name="brand" class="w-full p-4 border border-gray-300 rounded-lg shadow-inner focus:outline-none focus:ring-2 focus:ring-indigo-500">
            <option value="">Select Brand</option>
            {% for brand in brands %}
            <option value="{{ brand.slug }}" {% if brand.slug == selected_brand %}selected{% endif %}>{{ brand.name }}</option>
            {% endfor %}
         </select>
      </div>

      <!-- City select -->
      <div class="w-full md:w-1/3">
         <select name="city" class="w-full p-4 border border-gray-300 rounded-lg shadow-inner focus:outline-none focus:ring-2 focus:ring-indigo-500">
            <option value="">Select City</option>
            {% for city in cities %}
            <option value="{{ city.slug }}" {% if city.slug == selected_city %}selected{% endif %}>{{ city.name }}</option>
            {% endfor %}
         </select>
      </div>

      <!-- Buttons container -->
      <div class="w-full md:w-auto flex space-x-4 mt-4 md:mt-0">
         <!-- Search button -->
         <button type="submit" class="flex items-center justify-center px-6 py-3 bg-black text-white rounded-lg shadow-md hover:bg-gray-700 transition duration-200">
            <i class="fas fa-search mr-2"></i>Search
         </button>
         
         <!-- Reset button -->
         <button type="button" id="reset-button" class="flex items-center justify-center px-6 py-3 bg-gray-200 text-black rounded-lg shadow-md hover:bg-gray-300 transition duration-200">
            <i class="fas fa-redo mr-2"></i>Reset
         </button>
      </div>
   </form>
</div>
