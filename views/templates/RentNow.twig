<section id="TopSection" class="border border-gray-200 rounded-lg p-4 shadow-lg">
	<div class="w-full max-w-5xl mx-auto flex flex-col md:flex-row items-center my-6">


		<div class="w-full md:w-1/3 mb-6 md:mb-0 text-center md:text-left">
			<h2 class="text-2xl font-semibold text-gray-900">Reserve Your Car</h2>
			<p class="text-base text-gray-500 mt-2">Complete the following steps</p>
		</div>


		<div
			class="w-full md:w-2/3 flex flex-col md:flex-row items-center justify-between space-y-6 md:space-y-0">

			<!-- Step 1: Location & Time -->
			<div class="flex flex-col items-center">
				<div class="w-12 h-12 bg-gray-400 text-white rounded-full flex items-center justify-center">
					<svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" viewbox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
						<path d="M12 2C8.134 2 5 5.134 5 9c0 3.866 7 13 7 13s7-9.134 7-13c0-3.866-3.134-7-7-7zm0 10.5A1.5 1.5 0 1 1 12 7a1.5 1.5 0 0 1 0 3.5z"/>
					</svg>
				</div>
				<p class="text-sm text-gray-900 mt-2">Location & Time</p>
			</div>

			<!-- Connecting Line -->
			<div class="flex-grow h-0.5 bg-gray-300 hidden md:block"></div>

			<!-- Step 2: Add-Ons -->
			<div class="flex flex-col items-center">
				<div class="w-12 h-12 bg-gray-400 text-white rounded-full flex items-center justify-center">
					<svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" viewbox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
						<path stroke-linecap="round" stroke-linejoin="round" d="M4 6h16M4 12h16M4 18h16"/>
					</svg>
				</div>
				<p class="text-sm text-gray-900 mt-2">Add-Ons</p>
			</div>

			<!-- Connecting Line -->
			<div class="flex-grow h-0.5 bg-gray-300 hidden md:block"></div>

			<!-- Step 3: Details -->
			<div class="flex flex-col items-center">
				<div class="w-12 h-12 bg-gray-400 text-white rounded-full flex items-center justify-center">
					<svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewbox="0 0 24 24" stroke="currentColor">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 9h8M8 13h6"/>
					</svg>
				</div>
				<p class="text-sm text-gray-900 mt-2">Details</p>
			</div>

			<!-- Connecting Line -->
			<div class="flex-grow h-0.5 bg-gray-300 hidden md:block"></div>

			<!-- Step 4: Checkout -->
			<div class="flex flex-col items-center">
				<div class="w-12 h-12 bg-gray-400 text-white rounded-full flex items-center justify-center">
					<svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewbox="0 0 24 24" stroke="currentColor">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01"/>
					</svg>
				</div>
				<p class="text-sm text-gray-900 mt-2">Checkout</p>
			</div>

			<!-- Connecting Line -->
			<div class="flex-grow h-0.5 bg-gray-300 hidden md:block"></div>

			<!-- Step 5: Booking Confirmed -->
			<div class="flex flex-col items-center">
				<div class="w-12 h-12 bg-gray-400 text-white rounded-full flex items-center justify-center">
					<svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewbox="0 0 24 24" stroke="currentColor">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
					</svg>
				</div>
				<p class="text-sm text-gray-900 mt-2">Booking Confirmed</p>
			</div>
		</div>
	</div>
</section>

<div id="car-rental-container" class="container mx-auto flex flex-wrap">

	<aside id="car-details-sidebar" class="w-full h-full md:w-1/3 bg-white p-6 mt-6 mb-6 rounded-lg shadow-lg border">
		<h2 id="car-details-title" class="text-2xl font-bold mb-4">Car Details</h2>

		{% set car = rent_now.related_car %}
		{% set refundable_percent = 5 %}

		<div id="car-item" class="car-item p-4 ">
			<div class="flex items-start">
				<img src="{{ car.car_image }}" alt="{{ car.title }}" class="w-24 h-20 rounded-md object-cover mr-4">
				<div>
					<h3 id="car-item-title" class="text-lg font-semibold text-gray-800">{{ car.title }}</h3>
					<a id="car-item-link" href="{{ car.car_link }}" class="text-gray-800 text-sm mt-1 inline-block">View Car Details</a>
				</div>
			</div>

			<div id="car-rental-details" class="mt-4">
				<div class="border-t border-gray-300 pt-4">
					<p class="text-sm">Rental Charges Rate (1 day)
						<br>
						<span class="text-gray-500">(This does not include fuel)</span>
					</p>
					<p id="rental-price" class="text-lg font-semibold text-gray-700">+ ${{ car.rent_details.price }}
					</p>
				</div>
				<div id="additional-fees" class="mt-2">
					<p class="text-gray-700">Door delivery & Pickup:
						<span class="float-right">+ $60</span>
					</p>
					<p class="text-gray-700">Trip Protection Fees:
						<span class="float-right">+ $25</span>
					</p>
					<p class="text-gray-700">Convenience Fees:
						<span class="float-right">+ $2</span>
					</p>
					<p class="text-gray-700">Tax:
						<span class="float-right">+ $2</span>
					</p>
					<p class="text-gray-700">Refundable Deposit ({{ refundable_percent }}%):
						<span class="float-right" id="refundable-deposit">+ $0.00</span>
					</p>
					<div id="subtotal-container" class="mt-4 border-t border-gray-300 pt-4">
						<p class="text-gray-700 font-semibold">Subtotal:
							<span class="float-right" id="subtotal">+ $0.00</span>
						</p>
					</div>
				</div>
			</div>
			<div id="map-section" class="mt-10 bg-white border rounded-lg shadow-lg">
				{% set latitude = rent_now.related_car.latitude %}
				{% set longitude = rent_now.related_car.longitude %}

				<div id="map" class="h-52 rounded-lg shadow-lg z-10"></div>

			</div>
			<button id="view-larger-map-btn" class="text-black text-sm underline py-2 mt-2 font-semibold hover:font-bold " onclick="viewLargerMap()">
				View Larger Map
			</button>

		</aside>


		<main id="car-rental-main" class="flex-1 p-6">
			<h1 id="rental-service-title" class="Rental-service text-3xl font-bold">Welcome to the Car Rental Service</h1>
			<p id="rental-service-description" class="Rental-service mt-4 mb-4 text-lg text-gray-700">
				Here you can view all the details about the car available for rent. Use the sidebar to see rental prices and fees.
			</p>

			<section id="booking-time-section" class="mt-10 bg-white p-6 md:pt-6 border border-gray-300 rounded-lg shadow-lg mb-6">
				<h2 id="booking-time-title" class="text-2xl font-semibold mb-4">Booking Time</h2>

				<div id="fee-calculator-container">
					<form id="fee-calculator" class="flex flex-col space-y-4">
							<div class="flex flex-col md:flex-row md:space-x-4">
                      <div class="relative w-full">
                         <label for="start-date" class="block text-sm font-medium">Start Date</label>
                         <input id="start-date" name="start-date" 
                          class="border border-gray-300  rounded-lg p-2 pr-10 w-full focus:outline-none focus:ring-2"
                           placeholder="dd/mm/yyyy" >
                              <!-- Calendar icon aligned to the right -->
                              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 absolute right-2 top-9 text-black pointer-events-none" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                     <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3M16 7V3M3 11h18M5 19h14a2 2 0 002-2v-7a2 2 0 00-2-2H5a2 2 0 00-2 2v7a2 2 0 002 2z"/>
                             </svg>
                      </div>
                     <div class="relative w-full">
                         <label for="end-date" class="block text-sm font-medium ">End Date</label>
                             <input id="end-date" name="end-date" 
                                class="border border-gray-300  rounded-lg p-2 pr-10 w-full focus:outline-none focus:ring-2" 
                                 placeholder="dd/mm/yyyy">
                                 <!-- Calendar icon aligned to the right -->
                                 <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 absolute right-2 top-9 text-black pointer-events-none" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                       <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3M16 7V3M3 11h18M5 19h14a2 2 0 002-2v-7a2 2 0 00-2-2H5a2 2 0 00-2 2v7a2 2z"/>
                                </svg>
                         </div>
                    </div>
					</form>
				</div>
			</section>
			<!-- Add-Ons Section -->
			<section id="add-ons" class="mt-10 bg-white p-6 md:pt-6 border border-gray-300 rounded-lg shadow-lg mb-6">

				<h2 class="text-xl font-semibold mb-4 text-gray-800">Add-Ons</h2>

				<!-- Two Column Layout on larger screens, one column on small screens -->
				<div
					class="grid grid-cols-1 gap-4 md:grid-cols-2">
					<!-- Left Column (Checkboxes) -->
					<div class="space-y-3">
						<div class="flex items-center justify-between">
							<label for="gps" class="text-gray-700">GPS Navigation ($60)</label>
							<input type="checkbox" id="gps" class="addon-checkbox form-checkbox h-5 w-5 text-gray-600 rounded mr-7 md:mr-28">
						</div>
						<div class="flex items-center justify-between">
							<label for="baby-seat" class="text-gray-700">Baby Seat ($30)</label>
							<input type="checkbox" id="baby-seat" class="addon-checkbox form-checkbox h-5 w-5 text-gray-600 rounded mr-7 md:mr-28">
						</div>
						<div class="flex items-center justify-between">
							<label for="extra-insurance" class="text-gray-700">Extra Insurance ($100)</label>
							<input type="checkbox" id="extra-insurance" class="addon-checkbox form-checkbox h-5 w-5 text-gray-600 rounded mr-7 md:mr-28">
						</div>
						<div class="flex items-center justify-between">
							<label for="wifi" class="text-gray-700">Portable Wi-Fi ($50)</label>
							<input type="checkbox" id="wifi" class="addon-checkbox form-checkbox h-5 w-5 text-gray-600 rounded mr-7 md:mr-28">
						</div>
						<div class="flex items-center justify-between">
							<label for="additional-driver" class="text-gray-700">Additional Driver ($20/day)</label>
							<input type="checkbox" id="additional-driver" class="addon-checkbox form-checkbox h-5 w-5 text-gray-600 rounded mr-7 md:mr-28">
						</div>
					</div>

					<!-- Right Column (Quantity Controls) -->
					<div class="space-y-4">
						<div class="flex items-center justify-between md:mr-28">
							<label for="infant-seat" class="text-gray-700">Infant Seat ($50 each)</label>
							<div class="flex items-center">
								<button type="button" onclick="decreaseQuantity('infant-seat-quantity')" class="bg-gray-300 text-gray-700 rounded-full w-8 h-8 flex items-center justify-center hover:bg-gray-400">-</button>
								<span id="infant-seat-quantity" class="mx-2 text-gray-900">0</span>
								<button type="button" onclick="increaseQuantity('infant-seat-quantity')" class="bg-gray-500 text-white rounded-full w-8 h-8 flex items-center justify-center hover:bg-gray-600">+</button>
							</div>
						</div>
						<div class="flex items-center justify-between md:mr-28">
							<label for="toddler-seat" class="text-gray-700">Toddler Seat ($50 each)</label>
							<div class="flex items-center">
								<button type="button" onclick="decreaseQuantity('toddler-seat-quantity')" class="bg-gray-300 text-gray-700 rounded-full w-8 h-8 flex items-center justify-center hover:bg-gray-400">-</button>
								<span id="toddler-seat-quantity" class="mx-2 text-gray-900">0</span>
								<button type="button" onclick="increaseQuantity('toddler-seat-quantity')" class="bg-gray-500 text-white rounded-full w-8 h-8 flex items-center justify-center hover:bg-gray-600">+</button>
							</div>
						</div>
						<div class="flex items-center justify-between md:mr-28">
							<label for="snow-chains" class="text-gray-700">Snow Chains ($100 each)</label>
							<div class="flex items-center">
								<button type="button" onclick="decreaseQuantity('snow-chains-quantity')" class="bg-gray-300 text-gray-700 rounded-full w-8 h-8 flex items-center justify-center hover:bg-gray-400">-</button>
								<span id="snow-chains-quantity" class="mx-2 text-gray-900">0</span>
								<button type="button" onclick="increaseQuantity('snow-chains-quantity')" class="bg-gray-500 text-white rounded-full w-8 h-8 flex items-center justify-center hover:bg-gray-600">+</button>
							</div>
						</div>
						<div class="flex items-center justify-between md:mr-28">
							<label for="winter-tires" class="text-gray-700">Winter Tires ($100 each)</label>
							<div class="flex items-center">
								<button type="button" onclick="decreaseQuantity('winter-tires-quantity')" class="bg-gray-300 text-gray-700 rounded-full w-8 h-8 flex items-center justify-center hover:bg-gray-400">-</button>
								<span id="winter-tires-quantity" class="mx-2 text-gray-900">0</span>
								<button type="button" onclick="increaseQuantity('winter-tires-quantity')" class="bg-gray-500 text-white rounded-full w-8 h-8 flex items-center justify-center hover:bg-gray-600">+</button>
							</div>
						</div>
					</div>
				</div>

				<div id="add-on-total" class="hidden"></div>
			</section>


			<!-- Driver Details Section -->
			<section id="DriverDetails" class="border bg-white rounded-lg p-4 shadow-lg mb-10">
				<div class="container mx-auto">
					<div class="p-6">
						<h2 class="text-2xl font-semibold mb-4 text-gray-800">Driver Details</h2>
						<form class="space-y-4">
							<div class="grid grid-cols-1 md:grid-cols-2 gap-6">
								<div>
									<label for="first-name" class="block text-gray-700">First Name</label>
									<input type="text" id="first-name" class="mt-1 block w-full p-2 border border-gray-300 rounded-md" pattern="[A-Za-z]{1,10}" required>
									<h4 class="text-red-500 hidden" id="first-name-error">First name must be letters only and up to 10 characters.</h4>
								</div>
								<div>
									<label for="last-name" class="block text-gray-700">Last Name</label>
									<input type="text" id="last-name" class="mt-1 block w-full p-2 border border-gray-300 rounded-md" pattern="[A-Za-z]{1,10}" required>
									<h4 class="text-red-500 hidden" id="last-name-error">Last name must be letters only and up to 10 characters.</h4>
								</div>
							</div>

							<div class="grid grid-cols-1 md:grid-cols-2 gap-6">
								<div>
									<label for="email" class="block text-gray-700">Email</label>
									<input type="email" id="email" class="mt-1 block w-full p-2 border border-gray-300 rounded-md" required>
									<h4 class="text-red-500 hidden" id="email-error">Please enter a valid email.</h4>
								</div>
								<div>
									<label for="phone" class="block text-gray-700">Phone</label>
									<input type="text" id="phone" class="mt-1 block w-full p-2 border border-gray-300 rounded-md" required>
									<h4 class="text-red-500 hidden" id="phone-error">Phone number is required and must be valid.</h4>
								</div>
							</div>
							<div>
								<label for="dob" class="block text-gray-700">Date of Birth</label>
								<div class="grid grid-cols-3 gap-4">
									<select id="month" class="mt-1 block w-full p-2 border border-gray-300 rounded-md" required>
										<option value="">Month</option>
									</select>
									<select id="day" class="mt-1 block w-full p-2 border border-gray-300 rounded-md" required>
										<option value="">Day</option>
									</select>
									<select id="year" class="mt-1 block w-full p-2 border border-gray-300 rounded-md" required>
										<option value="">Year</option>
									</select>
								</div>
								<h4 class="text-red-500 hidden" id="dob-error">You must be at least 21 years old.</h4>
							</div>
							<div class="grid grid-cols-1 md:grid-cols-2 gap-6">
								<div>
									<label for="drivers-license" class="block text-gray-700">Upload Driver's License Image</label>
									<input type="file" id="drivers-license" name="drivers-license" accept="image/*" class="mt-1 block w-full h-12 p-2 border border-gray-300 rounded-md" required>
									<p class="text-gray-600">Note: Please upload an image of your driver's license. We will verify it in person.</p>
									<h4 class="text-red-500 hidden" id="license-error">Driver's license image is required.</h4>
								</div>
								<div>
									<label for="country" class="block text-gray-700">Country of Residence</label>
									<select id="country" class="mt-1 block w-full h-12 p-2 border border-gray-300 rounded-md" required>
										<option value="">Select Country</option>
									</select>
									<h4 id="country-error" class="text-red-500 hidden">Please select your country of residence.</h4>
								</div>
							</div>
							<div class="flex items-center">
								<input id="terms-agreement" type="checkbox" class="form-checkbox h-5 w-5 text-gray-600" required>
								<label for="terms-agreement" class="ml-2 text-gray-700">
									I agree to the
									<a href="javascript:void(0)" class="text-gray-600 underline" onclick="openTermsModal()">Terms and Conditions</a>
								</label>
							</div>
							<h4 id="terms-error" class="text-red-500 hidden mt-2">You must agree to the terms and conditions.</h4>
							<div
								class="mt-6">
								<!-- Book Now Button -->
								<button id="book-now-btn" type="button" class="text-black bg-gray-100 py-3 px-6 rounded-lg shadow-lg hover:bg-gray-400 transition">
									Book Now
								</button>
							</div>
						</form>
					</div>
				</div>
			</section>


			<!-- Modal Background -->
			<div
				id="termsModal" class="fixed inset-0 bg-black bg-opacity-50 hidden z-50 flex items-center justify-center">
				<!-- Modal Content -->
				<div class="bg-white w-11/12 max-w-3xl max-h-screen p-6 rounded-lg shadow-lg relative overflow-y-auto">
					<h2 class="text-2xl font-semibold mb-4 text-gray-800">Terms and Conditions</h2>

					<!-- Scrollable Content -->
					<div class="max-h-96 overflow-y-auto space-y-4 pr-4">
						<p class="text-gray-300">By booking a vehicle through our service, you agree to the terms and conditions set forth below. These terms apply to all bookings and any interactions related to your rental.</p>

						<h3 class="text-lg font-semibold text-black">1. Booking Confirmation</h3>
						<p class="text-gray-300">Your booking will be confirmed upon payment of the required amount, and you will receive an email confirmation. Please ensure that the details are correct.</p>

						<h3 class="text-lg font-semibold text-black">2. Cancellations and Refunds</h3>
						<p class="text-gray-300">Cancellations are free up to 48 hours before the rental begins. Refunds will be processed within 7 business days after cancellation.</p>

						<h3 class="text-lg font-semibold text-black">3. Driver Requirements</h3>
						<p class="text-gray-300">The primary driver must be over 21 years of age and hold a valid driverâ€™s license. International drivers must present both their license and passport.</p>

						<h3 class="text-lg font-semibold text-black">4. Vehicle Condition</h3>
						<p class="text-gray-300">The vehicle must be returned in the same condition it was rented. Any damages or cleanliness issues will be subject to additional charges.</p>

						<h3 class="text-lg font-semibold text-black">5. Fuel Policy</h3>
						<p class="text-gray-300">You are required to refuel the vehicle to the same level it was at when you received it. Failure to do so may result in additional charges.</p>

						<h3 class="text-lg font-semibold text-black">6. Insurance Coverage</h3>
						<p class="text-gray-300">Our vehicles come with basic insurance coverage, but you may be liable for additional costs in the event of damage or accidents.</p>

						<h3 class="text-lg font-semibold text-black">7. Late Returns</h3>
						<p class="text-gray-300">Late returns will incur additional fees, and failure to return the vehicle on time may result in the cancellation of your booking.</p>

						<h3 class="text-lg font-semibold text-black">8. Prohibited Uses</h3>
						<p class="text-gray-300">You may not use the vehicle for illegal activities, racing, towing, or transporting hazardous materials.</p>

						<h3 class="text-lg font-semibold text-black">9. Additional Drivers</h3>
						<p class="text-gray-300">Additional drivers must be registered and authorized in advance. Failure to do so may result in penalties.</p>

						<h3 class="text-lg font-semibold text-black">10. Governing Law</h3>
						<p class="text-gray-300">These terms and conditions are governed by the laws of the country in which the rental is taking place.</p>
					</div><br><br>


					<button class="mt-6 px-4 py-2 bg-red-500 text-white rounded hover:bg-red-700 absolute right-4 bottom-4" onclick="closeTermsModal()">Close</button>
				</div>
			</div>
			<!-- Modal Structure -->
			<div id="payment-modal" class="fixed inset-0 flex items-center justify-center bg-black bg-opacity-50 hidden z-[100]">
				<div class="bg-white rounded-lg shadow-lg w-full max-w-lg p-6">
					<h2 class="text-2xl font-semibold mb-4">Payment for
						{{ car.title }}</h2>

					<!-- Payment Information -->
					<p class="text-gray-700">Please select your payment method:</p>

					<div class="mt-4">
						<label class="block mb-2 text-gray-700">
							<input type="radio" name="payment-method" value="card" class="mr-2" onclick="showCardFields()">
							Pay with Card
						</label>
						<label class="block mb-2 text-gray-700">
							<input type="radio" name="payment-method" value="cash" class="mr-2" onclick="hideCardFields()">
							Pay Cash on Delivery
						</label>
					</div>

					<!-- Card Payment Fields -->
					<div id="card-fields" class="hidden mt-6">
						<div class="mb-4">
							<label for="card-number" class="block text-gray-700">Card Number</label>
							<input type="text" id="card-number" class="mt-1 block w-full p-2 border border-gray-300 rounded-md" placeholder="1234 5678 9012 3456" required>
							<h4 class="text-red-500 hidden" id="card-number-error">Please enter a valid card number.</h4>
						</div>
						<div class="flex space-x-4">
							<div class="w-1/2">
								<label for="expiration-date" class="block text-gray-700">Expiration Date</label>
								<input type="text" id="expiration-date" class="mt-1 block w-full p-2 border border-gray-300 rounded-md" placeholder="MM/YY" required>
								<h4 class="text-red-500 hidden" id="expiration-error">Please enter a valid expiration date (MM/YY).</h4>
							</div>
